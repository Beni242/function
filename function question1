// maximum array with function
#include <stdio.h>
#include <stdlib.h>
int A[10];

int Max_array()
{
    int max_1 = 0;
    int max_2 = 0;
    
    
    for(int i = 0 ; i < 10; i++)
    {
        printf("enter %d value of array : ", i+1);
        scanf("%d", &A[i]);
         
         if (max_1 < A[i])
         max_1 = A[i];
        
        else if ( max_2 < A[i] && max_2 != max_1 )
        max_2 = A[i];
        
      
    }
    printf("the first two biggest value is : %d and %d", max_1 , max_2);
    

    
   
}

int main() 
{
       Max_array();

    return 0;
}
