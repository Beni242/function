// maximum array with function
#include <stdio.h>
#include <stdlib.h>


void Max_array()
{
    int A[10], x , y;    
    int max_1 = x;
    int max_2 = y;
    
    
    for(int i = 0 ; i < 10; i++)
    {
        printf("enter %d value of array : ", i+1);
        scanf("%d", &A[i]);
         
         if (max_1 < A[i])
         max_1 = A[i];
        
        else if ( max_2 < A[i] && max_2 != max_1 )
        max_2 = A[i];
        
      
    }
    printf("the first two biggest value is : %d and %d", max_1 , max_2);
    

    
   
}

int main() 
{
    int arr[10];  
    
    Max_array(arr);

    return 0;
}
